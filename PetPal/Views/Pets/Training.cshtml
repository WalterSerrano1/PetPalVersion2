@model Training
@{
	ViewBag.Title = "Training";
}

<h2>Log a training/exercise session for Model.PetName's</h2>

<div class="row">

	<div class="col-md-8">
		<form asp-action="Training" method="post">
			<div asp-validation-summary="All" class="text-danger">
			</div>
			<div class="form-group">
				<label asp-for="TrainingType">Training Type</label>
				<select asp-for="TrainingType" class="form-control">
					<option value="">Select</option>
					<option value="Training">Training</option>
					<option value="Exercise">Excercise</option>
				</select>
			</div>
			<div class="form-group">
				<label asp-for="TrainingDate">Date</label>
				<input asp-for="TrainingDate" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="TrainingDuration">Duration</label>
				<input asp-for="TrainingDuration" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="TrainingNotes">Notes</label>
				<input asp-for="TrainingNotes" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>

	<div class="col-md-4">
		<div class="card">
			<img src="~/images/PetExercise.jpg" class="card-img-top" alt="Pet Image">
			<div class="card-body">
				<h5 class="card-title">Log a session for Training or exercise for your Pet</h5>
				<p class="card-text">1. Choose the type of <strong>Activity</strong> (Training or Exercise)</p>
				<p class="card-text">2. Choose the <strong>Date</strong></p>
				<p class="card-text">3. Choose the <strong>Duration</strong></p>
				<p class="card-text">5. Add any <strong>Notes</strong> about the session</p>
			</div>
		</div>
	</div>
</div>
